generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  profiles Profile[]
}

model Profile {
  id     Int    @id @default(autoincrement())
  name   String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
  gender String @default("male")

  @@unique([name, userId])
}

model FirstGame {
  id     Int     @id @default(autoincrement())
  phases Phase[]
}

model SecondGame {
  id     Int     @id @default(autoincrement())
  phases Phase[]
}

model ThirdGame {
  id     Int     @id @default(autoincrement())
  phases Phase[]
}

model Phase {
  id           Int         @id @default(autoincrement())
  gameId       Int?
  gameType     String
  words        Word[]
  FirstGame    FirstGame?  @relation(fields: [firstGameId], references: [id])
  firstGameId  Int?
  SecondGame   SecondGame? @relation(fields: [secondGameId], references: [id])
  secondGameId Int?
  ThirdGame    ThirdGame?  @relation(fields: [thirdGameId], references: [id])
  thirdGameId  Int?
}

model Word {
  id         Int    @id @default(autoincrement())
  word       String
  incomplete String
  emoji      String
  phaseId    Int
  phase      Phase  @relation(fields: [phaseId], references: [id])
}
