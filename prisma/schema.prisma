generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  profiles Profile[]
}

model Profile {
  id     Int    @id @default(autoincrement())
  name   String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
  gender String @default("male")

  @@unique([name, userId])
}

model Game {
  id     Int     @id @default(autoincrement())
  type   String
  phases Phase[]
}

model Phase {
  id     Int    @id @default(autoincrement())
  gameId Int
  game   Game   @relation(fields: [gameId], references: [id])
  words  Word[]
}

model Word {
  id          Int     @id @default(autoincrement())
  word        String
  syllables   String
  size        Int
  image       String
  audioMale   String?
  audioFemale String?
  phaseId     Int
  phase       Phase   @relation(fields: [phaseId], references: [id])
}
